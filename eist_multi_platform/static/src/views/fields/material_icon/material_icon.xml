<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="web.MaterialIconField">
        <div class="d-inline-flex w-100">
            <t t-if="props.readonly">
                <!-- <a t-if="props.record.data[props.name]" class="o_form_uri" t-att-href="phoneHref" t-esc="props.record.data[props.name]"/> -->
                <i class="material-icons md-48">
                    <!-- <t t-esc="props.record.data[props.name].lower()" /> -->
                    <t t-esc="name_lower" />
                </i>
            </t>
            <t t-else="">
                <input class="o_input" t-att-id="props.id" type="text" autocomplete="off" t-att-placeholder="props.placeholder" t-ref="input" />
            </t>
        </div>
    </t>



    <t t-name="web.KanbanMaterialIconField">
        <i class="material-icons">
            <t t-esc="name_lower" />
        </i>
    </t>

    <t t-name="web.FormMaterialIconField">
        <div class="d-inline-flex w-100">
            <i class="material-icons md-48" style="font-size:128px">
                <t t-esc="name_lower" />
            </i>
        </div>
    </t>

</templates>

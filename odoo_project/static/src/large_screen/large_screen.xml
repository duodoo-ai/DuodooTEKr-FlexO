<?xml version="1.0" encoding="UTF-8"?>

<templates>

    <div t-name="odoo_project.PipelineLargeScreen" class="o_pipeline_large_screen">

        <div class="o_project_large_screen_wrap d-flex">

            <div class="alert alert-warning" role="alert" t-if="state.geo_provider['has_error']">
                <h4 class="alert-heading">
                    <i class="bi bi-exclamation-triangle"></i>Error!</h4>
                <p>
                    <t t-esc="state.geo_provider['message']"/>
                </p>
                <hr/>
                <p class="mb-0">
                    <t t-esc="state.geo_provider['suggtions']"/>
                </p>
            </div>
            <t t-else="">


                <!-- 地图  -->
                <t t-if="!state['has_error']">
                    <TencentProjectRouteMap projects="state.projects" key="state.geo_provider['key']" zoom="8" t-if="state.geo_provider['tech_name']=='tencent_map'" isLargeScreen="true"/>
                    <AmapProjectRouteMap projects="state.projects" key="state.geo_provider['key']" zoom="8" t-if="state.geo_provider['tech_name']=='amap'" isLargeScreen="true"/>
                </t>
                <!-- 内容容器 -->
                <div class="data-container">
                    <Header title="state.title"/>
                    <div class="alert alert-warning" role="alert" t-if="state['has_error']">
                        <h4 class="alert-heading">
                            <i class="bi bi-exclamation-triangle"></i>Error!</h4>
                        <p>
                            <t t-esc="state['error_message']"/>
                        </p>
                    </div>
                    <t t-else="">
                        <div class="data-container-body">
                            <div class="data-container-body-left"></div>
                            <div class="data-container-body-center">
                                <div class="data-container-body-center-top">
                                    <Dashboard pipeline_data="state.pipeline_data"/>
                                </div>
                                <div class="data-container-body-center-bottom">
                                    <Overview projects="state.projects"/>
                                </div>
                            </div>
                            <div class="data-container-body-right"></div>
                        </div>
                    </t>
                </div>

            </t>


        </div>
    </div>

</templates>

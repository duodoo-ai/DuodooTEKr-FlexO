<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- 项目列表，继承原视图 -->
    <record model="ir.ui.view" id="view_inherit_project_project_list">
        <field name="name">inherit.project.project.list</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.view_project"/>
        <field name="arch" type="xml">
            <field name="stage_id" position="after">
                <field name="pipeline_diameter" optional="show"/>
                <field name="pipeline_length" optional="show"/>
            </field>
        </field>
    </record>

    <!-- 项目form，继承原视图 -->
    <record id="edit_project" model="ir.ui.view">
        <field name="name">project.project.form</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.edit_project"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet/group/group[last()]" position="after">
                <group string="Pipeline data">
                    <field name="pipeline_no"/>
                    <field name="pipeline_diameter"/>
                    <field name="pipeline_activation_time"/>
                    <field name="pipeline_length"/>
                </group>
            </xpath>
        </field>
    </record>


    <!-- 项目路线图，右侧显示地图 -->
    <record model="ir.ui.view" id="view_project_route_map_list">
        <field name="name">project.project.route_map.list</field>
        <field name="model">project.project</field>
        <field name="arch" type="xml">
            <list default_order="sequence" js_class="project_route_map_list" decoration-success="not pipeline_node_has_exception" decoration-danger="pipeline_node_has_exception">
                <field name="id" column_invisible="True"/>
                <field name="sequence" column_invisible="True"/>
                <field name="pipeline_node_has_exception" column_invisible="True"/>
                <field name="name"/>
                <field name="pipeline_length"/>
                <field name="date" />
                <field name="stage_id" options="{'no_open': True}"/>
                <field name="monthly_traffic" optional="hide" sum="monthly_traffic"/>
                <field name="seasonal_traffic" optional="hide" sum="seasonal_traffic"/>
                <field name="year_traffic" optional="hide" sum="year_traffic"/>
                <field name="real_input_traffic" optional="hide"/>
                <field name="real_output_traffic" optional="hide"/>
                <field name="total_traffic" optional="show" sum="total_traffic"/>
                <field name="last_update_status" string="Status" nolabel="1" width="20px" widget="project_state_selection"/>
                <field name="locations" column_invisible="True"/>
            </list>
        </field>
    </record>

    <record id="action_view_project_route_map" model="ir.actions.act_window">
        <field name="name">Route map</field>
        <field name="res_model">project.project</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="view_mode">list</field>
        <field name="view_ids" eval="[(5, 0, 0),
            (0, 0, {'view_mode': 'list', 'view_id': ref('view_project_route_map_list')})
        ]"/>
    </record>

<!--    <record id="action_projects_large_screen" model="ir.actions.client">-->
<!--        <field name="name">Monitor the large screen</field>-->
<!--        <field name="path">pipeline_large_screen</field>-->
<!--        <field name="tag">pipeline_large_screen</field>-->
<!--        <field name="target">fullscreen</field>-->
<!--    </record>-->
    <!-- 创建新项目动作，排除kanban视图 -->
    <record id="open_view_project_all_custom" model="ir.actions.act_window">
        <field name="name">Projects (Custom)</field>
        <field name="res_model">project.project</field>
        <field name="domain">[]</field>
        <field name="context">{'display_milestone_deadline': True}</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="project.view_project_project_filter"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No projects found. Let's create one!
            </p>
            <p>
                Create projects to organize your tasks. Define a different workflow for each project.
            </p>
        </field>
    </record>

    <!-- 更新菜单项指向新动作 -->
    <record id="project.menu_projects" model="ir.ui.menu">
        <field name="action" ref="open_view_project_all_custom"/>
    </record>

    <record id="open_view_project_all_group_stage_custom" model="ir.actions.act_window">
        <field name="name">Projects</field>
        <field name="res_model">project.project</field>
        <field name="context">{'display_milestone_deadline': True}</field>
        <field name="domain">[]</field>
        <field name="view_mode">list,form,calendar,activity</field>
        <field name="search_view_id" ref="project.view_project_project_filter"/>
        <field name="target">main</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No projects found. Let's create one!
            </p>
            <p>
                Projects contain tasks on the same topic, and each has its own dashboard.
            </p>
        </field>
    </record>
    <!-- 更新菜单项指向新动作 -->
    <record id="project.menu_projects_group_stage" model="ir.ui.menu">
        <field name="action" ref="open_view_project_all_group_stage_custom"/>
    </record>

    <record id="project_view_project_list" model="ir.ui.view">
        <field name="name">inherit.project.project.list</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.view_project"/>
        <field name="arch" type="xml">
            <xpath expr="//list/button[@name='action_view_tasks']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
        </field>
    </record>
    <record id="project_edit_project_form" model="ir.ui.view">
        <field name="name">inherit.project.project.form</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.edit_project"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet/div/button[@name='action_view_tasks']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//sheet/div/button[@name='project_update_all_action']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
        </field>
    </record>
</odoo>
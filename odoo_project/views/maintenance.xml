<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="odoo_project_inherit_view_equipment_form_view" model="ir.ui.view">
            <field name="name">odoo_project.inherit.equipment.form</field>
            <field name="model">maintenance.equipment</field>
            <field name="inherit_id" ref="maintenance.hr_equipment_view_form"/>
            <field name="arch" type="xml">
                <field name="location" position="attributes">
                    <attribute name="invisible">1</attribute>
                </field>
                <field name="maintenance_team_id" position="before">
                    <field name="location_id" options="{'no_open': True, 'no_create': True}"/>
                    <field name="serial_no"/>
                </field>
                <xpath expr="//sheet/notebook/page/group/group/field[@name='serial_no']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
            </field>
        </record>

        <record id="odoo_project_inherit_view_equipment_list_view" model="ir.ui.view">
            <field name="name">odoo_project.inherit.equipment.list</field>
            <field name="model">maintenance.equipment</field>
            <field name="inherit_id" ref="maintenance.hr_equipment_view_tree"/>
            <field name="arch" type="xml">
		    	<xpath expr="//field[@name='name']" position="before">
		    		<field name="location_id" optional="show"/>
	            </xpath>
            </field>
        </record>
    </data>
</odoo>
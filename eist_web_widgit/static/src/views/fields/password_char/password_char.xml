<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="web.PasswordCharField" owl="1">

        <input type="text" class="o_input" autocomplete="off" t-att-id="props.id" t-att-placeholder="props.placeholder" data-encrypted="true" t-att-required="props.required" t-ref="input" t-att-readonly="props.readonly" />

        <button type="button" t-ref="button" t-attf-class="btn btn-sm btn-primary o_display_password_button" t-on-click.stop="() => this.onClick()">
            <i t-attf-class="fa fa-eye{{state.encrypted ? '-slash':''}}"/>
        </button>


    </t>

</templates>
